{
  "name": "weatherCityExtension",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Extension que te permite revisar el clima segun el pais y ciudad que elijas.",
  "author": "Luis Guerrero",
  "permissions" :["storage", "tabs", "<all_urls>", "activeTab", "alarms"],
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js; object-src 'self'"
  
}
